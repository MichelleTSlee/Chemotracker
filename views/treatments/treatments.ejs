<% include ../partials/header %>

<div class="container">
  <header class="jumbotron">
    <h1>Welcome to ChemoTracker</h1>
    <p>Track your chemotherapy sessions and side effects. </p>
    <p>
      <a class="btn btn-primary btn-lg" href="/treatments/new">
       New session? Click here</a>
    </p>
  </div>
  </header>

  <div class="row">
    <div class="col-lg-12">
      <h3> Most Recent Sessions </h3>

    </div>
  </div>

  <div class="row text-center" style="display:flex; flex-wrap: wrap;">
      <% treatment.forEach(function(session){ %>
      <div class="col-md-3 col-sm-6">
        <div class="thumbnail">

        <img src="<%= session.image %>" %> >
        <h4> <%= session.date  %> </h4>

          <div class="caption">
            <h4> <%= session.description  %> </h4>
          </div>
          <p>
            <a href="/treatments/<%= session._id %>" class="btn btn-primary">More Info</a>
            <!-- This is the auto gen Mongo ID-->
          </p>
        </div>


</div>
    <% }); %>
  </div>
</div>



<% include ../partials/footer %>
