<% include ../partials/header %>

<div class="container">
  <header class="jumbotron">
    <h1>Welcome to ChemoTracker</h1>
    <p>Track your chemotherapy sessions and side effects. </p>
    <p>
      <a class="btn btn-primary btn-lg" href="/treatments/new">
       New session? Click here</a>
    </p>
  </div>
  </header>

  <div class="row text-center" style="display:flex; flex-wrap: wrap;">
      <% treatment.forEach(function(session){ %>
      <div class="col-md-3 col-sm-6">
        <div class="thumbnail">
          <img src= "https://cdn.pixabay.com/photo/2017/09/07/10/25/logo-2724481__340.png">
          <h2> <%= session.date  %> </h2>
          <p>
              <a href="/treatments/<%= session._id %>"  class="btn btn-primary">More Info</a>
          </p>
          </div>


</div>
    <% }); %>
  </div>
</div>



<% include ../partials/footer %>
