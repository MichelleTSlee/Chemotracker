<% include ../partials/header %>


  <header class="jumbotron">
    <h1>Welcome to ChemoTracker</h1>
    <p>Track your chemotherapy sessions and side effects. </p>
    <p>
      <a class="btn btn-primary btn-lg" href="/treatments/new">
       New session? Click here</a>
    </p>
  </div>
  </header>

  <div class="row text-center" style="display:flex; flex-wrap: wrap; margin-right:5%">
      <% treatment.forEach(function(session){ %>
      <div class="col-md-3 col-sm-6">
        <div class="thumbnail">
          <img src= "https://images.unsplash.com/photo-1507413245164-6160d8298b31?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60" width="100" height="100">
          <h2> <%= session.date  %> </h2>
          <p>
              <a href="/treatments/<%= session._id %>"  class="btn btn-primary">More Info</a>
          </p>
            </div>
            </div>
    <% }); %>
  </div>




<% include ../partials/footer %>
