<% include ../partials/header %>
<div class="container">
  <div class="row">
    <h1 style="text-align: center">Edit Details</h1>
    <div style="width:30%; margin: 25px auto;"><!-- This is 25 on top
    & bottom & auto left & right-->

    <form  action="/treatments/<%= treatment._id %>?_method=PUT" method="POST">

    <div class="form-group">
        <input class="form-control" type="text" name="treatment[date]"   value="<%= treatment.date %>"  />
    </div>

        <div class="form-group">
            <input class="form-control" type="text" name="treatment[neutrophils]"   value="<%=treatment.neutrophils %>"  />
        </div>


        <div class="form-group">
            <input class="form-control" name="treatment[description]" value="<%=treatment.description %>"  />
        </div>

        <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Update</button>
        </div>
      </form>

      <a href="/treatments">Go Back</a>
    </div>
  </div>
</div>


<% include ../partials/footer %>
