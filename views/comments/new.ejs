<% include ../partials/header %>
<div class="container">
  <div class="row">
    <h1 style="text-align: center">Add New Comment for <%= treatment.date %> Chemo session </h1>
    <div style="width:30%; margin: 25px auto;"><!-- This is 25 on top
    & bottom & auto left & right-->

      <form  action="/treatments/<%= treatment._id %>/comments" method="POST">
        <div class="form-group">
            <input class="form-control" name="comment[date]" placeholder="date" />
        </div>
        <div class="form-group">
            <input class="form-control" name="comment[author]" placeholder="author" />
        </div>
        <div class="form-group">
            <input class="form-control" name="comment[text]" placeholder="text" />
        </div>
        <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Log</button>
        </div>
      </form>

      <a href="/treatments">Go Back</a>
    </div>
  </div>
</div>


<% include ../partials/footer %>
