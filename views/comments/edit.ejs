<% include ../partials/header %>

  <div class="row">
    <h1 style="text-align: center">Edit Side Effects  </h1>
    <div style="width:30%; margin: 25px auto;"><!-- This is 25 on top
    & bottom & auto left & right-->

      <form  action="/treatments/<%= treatment_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">

        <div class="form-group">
            <input class="form-control" name="comment[date]" value="<%= comment.date %>" />
        </div>
        <div class="form-group">
            <input class="form-control" name="comment[text]" value="<%= comment.text %>" />
        </div>
        <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Update</button>
        </div>
      </form>

      <a href="/treatments">Go Back</a>
    </div>
  </div>



